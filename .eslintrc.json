{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "react-app",
    "eslint:recommended",
    "prettier",
    "prettier/@typescript-eslint",
    "prettier/react"
  ],
  "plugins": ["react", "react-hooks", "eslint-plugin-cypress", "prettier"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "cypress/globals": true
  },
  "rules": {
    "valid-typeof": "warn",
    "prettier/prettier": [
      "error",
      {},
      {
        "usePrettierrc": true
      }
    ]
  }
}
